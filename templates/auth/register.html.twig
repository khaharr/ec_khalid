{% extends 'auth.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <!-- Page -->
    <div class="flex items-center justify-center grow bg-center bg-no-repeat page-bg">
        <div class="card max-w-[370px] w-full">
            <form action="{{ path('auth.register') }}" class="card-body flex flex-col gap-5 p-10" method="post">

                <!-- CSRF Token -->
                {{ form_start(registrationForm) }}

                <div class="text-center mb-2.5">
                    <h3 class="text-lg font-medium text-gray-900 leading-none mb-2.5">
                        Inscription
                    </h3>
                    <div class="flex items-center justify-center">
                        <span class="text-2sm text-gray-700 me-1.5">
                            Vous avez déjà un compte ?
                        </span>
                        <a class="text-2sm link" href="{{ path('auth.login') }}">
                            Me connecter
                        </a>
                    </div>
                </div>

                {{ form_errors(registrationForm) }}

                <!-- Email Field -->
                <div class="flex flex-col gap-1">
                    {{ form_label(registrationForm.email) }}
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'input'}}) }}
                    {{ form_errors(registrationForm.email) }}
                </div>

                <!-- Password Field -->
                <div class="flex flex-col gap-1 relative">
                    {{ form_label(registrationForm.password) }}
                    <div class="flex items-center">
                        {{ form_widget(registrationForm.password, {'attr': {'class': 'input'}}) }}
                    </div>
                    {{ form_errors(registrationForm.password) }}
                </div>

                <!-- Agree Terms Field -->
                <label class="checkbox-group">
                    {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'checkbox checkbox-sm'}}) }}
                    <span class="checkbox-label">
                        J'accepte les <a class="text-2sm link" href="#">GCU</a>
                    </span>
                </label>

                <!-- Submit Button -->
                <button class="btn btn-primary flex justify-center grow">Inscription</button>

                {{ form_end(registrationForm) }}
            </form>
        </div>
    </div>
    <!-- End of Page -->
{% endblock %}
